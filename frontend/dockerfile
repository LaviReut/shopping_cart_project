FROM node:14.15.0

WORKDIR /frontend

COPY . .

RUN npm install

# production environment
FROM nginx:1.19.10-alpine
COPY --from=build /frontend/build /usr/share/nginx/html

COPY --from=build /frontend/nginx/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
EXPOSE 443
CMD ["nginx", "-g", "daemon off;"]